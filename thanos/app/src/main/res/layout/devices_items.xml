<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded">


    <ImageView
        android:id="@+id/imgDevice"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/img_tm536" />
    <TextView
        android:id="@+id/tvDeviceMac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MAC"
        android:layout_below="@+id/imgDevice"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/tvDeviceSerialNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SerialNumber"
        android:layout_below="@+id/tvDeviceMac"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:layout_marginBottom="5dp"/>


</RelativeLayout>